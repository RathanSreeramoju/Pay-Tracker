<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F7F7">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_add_work"
            android:text="Add Work"
            android:textSize="@dimen/_25sdp"
            android:layout_margin="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/image_add"
            android:layout_alignRight="@+id/tv_add_work"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:src="@drawable/ic_add"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"/>


        <LinearLayout
            xmlns:app="http://schemas.android.com/tools"
            android:layout_below="@+id/tv_add_work"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/cd_daily"
                    app:cardBackgroundColor="#4D817C"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    card_view:cardCornerRadius="@dimen/_10sdp"
                    card_view:cardElevation="@dimen/_10sdp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:background="#4D817C"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:text="Daily"
                            android:textSize="@dimen/_15sdp"
                            android:paddingRight="@dimen/_15sdp"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:id="@+id/login_applogo"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_130sdp" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/cd_weekly"
                    app:cardBackgroundColor="#F8ED88"
                    android:layout_marginRight="@dimen/_2sdp"
                    card_view:cardCornerRadius="@dimen/_10sdp"
                    card_view:cardElevation="@dimen/_10sdp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:background="#F8ED88"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:text="Weekly"
                            android:textSize="@dimen/_15sdp"
                            android:paddingRight="@dimen/_15sdp"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_130sdp"
                            android:layout_centerHorizontal="true" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/cd_monthly"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="#F8ED88"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_2sdp"
                    card_view:cardCornerRadius="@dimen/_10sdp"
                    card_view:cardElevation="@dimen/_10sdp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:background="#F8ED88"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:text="Monthly"
                            android:textSize="@dimen/_15sdp"
                            android:paddingRight="@dimen/_15sdp"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_130sdp"
                            android:layout_centerHorizontal="true" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/cd_yearly"
                    app:cardBackgroundColor="#4D817C"
                    android:layout_marginRight="@dimen/_2sdp"
                    card_view:cardCornerRadius="@dimen/_10sdp"
                    card_view:cardElevation="@dimen/_10sdp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#4D817C"
                        android:orientation="vertical">

                        <TextView
                            android:text="Yearly"
                            android:textSize="@dimen/_15sdp"
                            android:paddingRight="@dimen/_15sdp"
                            android:textColor="#FFFFFF"
                            android:gravity="center"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_130sdp"
                            android:layout_centerHorizontal="true" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/side_navigation_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        android:id="@+id/nv">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
