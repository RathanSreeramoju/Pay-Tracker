<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:rsb="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/welcom">


    <androidx.cardview.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView

                android:text="Welcome to"
                android:textSize="30sp"

                android:gravity="left"
                android:textColor="#fbd55b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView

                android:text="Pay Tracker"
                android:textSize="30sp"

                android:gravity="left"
                android:textColor="#fbd55b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <Button
                android:id="@+id/bt_signupaccount"
                android:text="Create Account"
                android:padding="@dimen/_11sdp"
                android:textSize="@dimen/_13sdp"
                android:textColor="#03DAC5"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/button_rounded3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/bt_signinaccount"
                android:text="Already have an Account? Login"
                android:padding="@dimen/_11sdp"
                android:textSize="@dimen/_13sdp"
                android:textColor="#55bbdc"
                android:textAllCaps="false"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"

                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>