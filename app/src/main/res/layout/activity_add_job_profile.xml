<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_company_name"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"

        android:orientation="vertical">

        <TextView
            android:text="Company Name "
            android:textSize="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <EditText
            android:id="@+id/et_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/edittext_rounded"
            android:hint="Company Name"
            android:padding="@dimen/_8sdp" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_job_title"

        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView
            android:text="Job Title "
            android:textSize="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <EditText
            android:id="@+id/et_job_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/edittext_rounded"
            android:hint="Job Title"
            android:padding="@dimen/_8sdp" />




    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_sal_per_hour"

        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">
        <TextView
            android:text="Salary Per Hour"
            android:textSize="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_sal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/edittext_rounded"
            android:hint="Salary Per Hour"
            android:padding="@dimen/_8sdp" />


    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_provinces"

        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView
            android:text="Provinces"
            android:textSize="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>




        <Spinner
            android:id="@+id/spin_provinces"

            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/edittext_rounded"
            android:padding="20dp"
            android:scrollbars="none"
            android:spinnerMode="dropdown"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:text="Previous"
                android:visibility="gone"
                android:layout_weight="1"
                android:textColor="#03DAC5"
                android:layout_marginLeft="@dimen/_15sdp"
                android:background="@drawable/button_rounded3"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_35sdp" />

            <Button
                android:id="@+id/btn_submit"
                android:text="Submit"
                android:layout_weight="1"
                android:textColor="#03DAC5"
                android:layout_marginLeft="@dimen/_45sdp"
                android:background="@drawable/button_rounded3"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_35sdp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>

